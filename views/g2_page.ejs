<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Canada Drives - G2 test</title>
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/styles.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Navigation-->
        
        <%-
            include('layouts/navbar');
        %>
        <!-- Page Header-->
        <header class="masthead" style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),url('assets/img/g2-test-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>G2 Test  Resgistration</h1>
                            <span class="subheading">Please Fill the below form to register for G2 Test</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    
                    
                    <% if(errors != null && errors.length > 0){ %>
                        <ul class="list-group"></ul>
                        <% for (var i = 0; i < errors.length; i++) { %>
                        <li class="list-group-item list-group-item-danger"><%=
                        errors[i] %></li>
                        <% } %>
                        </ul>
                        <% } %>
                        
                        
                        <%


                      
                            if (message =="Inserted") { 
                            
                            %>
                                    <h1>Deatils Inserted</h1>
                             
                                <% 
                            }
                                
                            else  if (message !="notLoggedin") {
                        %>
                        

                    <form id="createUserform" method="post" action="/updateDriver">
                        <fieldset >
                            <legend>Personal Information</legend>
                           
                            <div class="form-group row">
                                <label for="inputFirstName" class="col-sm-4 col-form-label">First Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="inputFirstName" id="inputFirstName" placeholder="First name" <% if (users !="") { %> value="<%= users.firstname %>" <% } %> required>
                                </div>
                            </div>  
                            <div class="form-group row">
                                <label for="inputLastName" class="col-sm-4 col-form-label">Last Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="inputLastName" id="inputLastName" placeholder="Last name" <% if (users !="") { %> value="<%= users.lastname %>" <% } %> required>
                                </div>
                            </div>   
                            <div class="form-group row">
                                <label for="inputLicense" class="col-sm-4 col-form-label">License Number</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="inputLicense" id="inputLicense" placeholder="License Number" <% if (users !="") { %> value="<%= users.licenseNo %>" <% } %> required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputAge" class="col-sm-4 col-form-label">Age</label>
                                <div class="col-sm-8">
                                    <input type="number" class="form-control" name="inputAge" id="inputAge" placeholder="Age" <% if (users !="") { %> value="<%= users.Age %>" <% } %> required>
                                </div>
                            </div>
                            
                            
                        </fieldset>
                        <br><br>
                        <fieldset >
                            <legend>Car Information</legend>

                            <div class="form-group row">
                                <label for="inputMake" class="col-sm-4 col-form-label">Make</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control"  name="inputMake" id="inputMake" placeholder="Make" <% if (users !="") { %> value="<%= users.car_details.make %>" <% } %> required>
                                </div>
                            </div> 
                            <div class="form-group row">
                                <label for="inputModel" class="col-sm-4 col-form-label">Model</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="inputModel" id="inputModel" placeholder="Model" <% if (users !="") { %> value="<%= users.car_details.model %>" <% } %>  required>
                                </div>
                            </div> 
                            <div class="form-group row">
                                <label for="inputYear" class="col-sm-4 col-form-label">Year</label>
                                <div class="col-sm-8">
                                    
                                    <input type="number" class="form-control" name="inputYear" id="inputYear" placeholder="Year" <% if (users !="") { %> value="<%= users.car_details.year %>" <% } %> required>
                                </div>
                            </div> 
                            <div class="form-group row">
                                <label for="inputPlateNumber" class="col-sm-4 col-form-label">Plate Number</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="inputPlateNumber" id="inputPlateNumber" placeholder="Plate Number" <% if (users !="") { %> value="<%= users.car_details.platno %>" <% } %> required>
                                </div>
                            </div> 
                        </fieldset>
                        <br><div class="form-group row">
                            <label  class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">  
                                <button type="submit" class="btn btn-primary">Update Details</button> 
                            </div>
                        </div>
                        <br>
                        </form>
                        <% if (!users.appointmentID || (users.exam_details.testtype == "G2" && users.exam_details.status == false)) { %>
                            <h4>Previous exam result</h4>
                            <h4>Result: Fail </h4>
                            <h4>Comments: <%= users.exam_details.comments %></h4>
                            <form id="bookAppointment" method="post" action="/makeAppointment">
                            <br>
                                <fieldset >
                                    <legend>Book an appointment</legend>
                                    <div class="form-group row">
                                        <label for="date" class="col-sm-4 col-form-label">Date : </label>
                                        <div class="col-sm-8">

                                            <input type="date" class="form-control" name="date" id="date"  >
                                            
                                        </div>
                                    </div>  
                                    <input type="text" id="loadedTimes" value=""  hidden>
                                    <div class="form-group row">
                                        <label for="time" class="col-sm-4 col-form-label">Time : </label>
                                        <div class="col-sm-8">

                                            <select id="time" name="time"  class="form-control" >
                                                
                                                <option value="" disabled selected>Select a time</option>
                                                
                                            </select>
                                            
                                        </div>
                                    </div>  
                                </fieldset>
                                <br><div class="form-group row">
                                    <label  class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">  
                                        <button type="submit" class="btn btn-primary">Book Appointment</button> 
                                    </div>
                                </div><br>
                            </form>
                    <% } if (users.exam_details.testtype == "G") {%>
                        <h3> You have already passed G2 !</h3>
                    <% } %>
                    <% } if (users.exam_details.testtype == "G") {%>
                        <h3> G2 Test Appointment Booked</h3>
                    <% %>
                    <% } %>
                      <%
                            }
                            else{
                                %>
                                    <h1>Please Log In</h1>
                            
                                <% 
                            }
                      %>
                </div>
            </div>
        </div>
        <!-- Footer-->
        
        <%-
            include('layouts/footer');
        %>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#date').on('change', function () {

               
                    const selectedDate = $(this).val();

                    // Make an AJAX request to fetch available times
                    $.ajax({
                    url: '/timeslots',
                    method: 'GET',
                    data: { date: selectedDate , testtype: "G2"},
                    dataType: 'json',
                    success: function(data) {
                        // Display available times
                        displayAvailableTimes(data);
                    },
                    error: function(error) {
                        console.error('Error fetching available times:', error);
                    }
                    });

                    function displayAvailableTimes(appointments) {
                        // Clear previous times
                        $('#time').empty();
                        
                        if(appointments != ""){
                            $('#time').append('<option value="" disabled selected>Select a time</option>');
                            
                            appointments.forEach(appointment => {
                                console.log(appointment);
                                $('#time').append(`<option value="${appointment._id}">${appointment.time}</option>`);
                            });
                        }
                        else{
                            $('#time').append('<option value="" disabled selected>No Slots Available</option>');
                        }

                        
                    }

                });
            });
        </script>
    </body>
</html>
