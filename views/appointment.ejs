<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Canada drives - G test</title>
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/styles.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Navigation-->
        
        <%-
            include('layouts/navbar');
        %>
        <!-- Page Header-->
        <header class="masthead" style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),url('assets/img/g-test-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Appointment</h1>
                            <span class="subheading">Take an Appointment for the Drivers License test here</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                    <%
            
                             
                    if (message =="Inserted") { 

                    %>
                            <h1 class="message">Appointment inserted</h1>

                        <% 
                    }
                    if (message =="NotInserted") { 

                        %>
                                <h1>Oops! appointment not inserted</h1>
                        
                            <% 
                        }
                        
                    %>
                    
                    

                    <div class="col-md-6 mt-5">
                    <div class="card">
                        
                        <div class="card-header">
                            <h4>Choose the time slot</h4>
                        </div>
                        <div class="card-body">
                            
                            <form action="/createAppointment" method="POST">

                               
                                <div class="form-group row">
                                    <label for="date" class="col-sm-4 col-form-label">Date : </label>
                                    <div class="col-sm-8">

                                        <input type="date" class="form-control" name="date" id="date"  required>
                                        
                                    </div>
                                </div>  
                                <input type="text" id="loadedTimes" value="<% if (appointments) {    %><%= appointments %><%  }   %>"  hidden>
                                <div class="form-group row">
                                    <label for="time" class="col-sm-4 col-form-label">Time : </label>
                                    <div class="col-sm-8">

                                        <select id="time" name="time"  class="form-control" required>
                                            
                                            <option value="" disabled selected>Select a time</option>
                                            
                                          </select>
                                        
                                    </div>
                                </div>  
                                                           
                                
                                <div class="form-group row">
                                    <label  class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-primary">Add Appointment</button>
                                    </div>
                                </div>
                               
                              </form>
                        </div>
                    </div>
                
                </div>
            </div>
        </div>
       
        <!-- Footer-->
        
        <%-
            include('layouts/footer');
        %>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#date').on('change', function () {

                    const allTimeSlots = ['9:00','10:00','11:00','12:00','13:00','14:00'];
                    const allocatedSlots = [];


                    const selectedDate = $(this).val();
                    const timeSelect = $('#time');

                    // Make an AJAX request to fetch available times
                    $.ajax({
                    url: '/timeslotsAdmin',
                    method: 'GET',
                    data: { date: selectedDate },
                    dataType: 'json',
                    success: function(data) {
                        // Display available times
                        displayAvailableTimes(data);
                    },
                    error: function(error) {
                        console.error('Error fetching available times:', error);
                    }
                    });

                    function displayAvailableTimes(appointments) {
                        // Clear previous times
                        $('#time').empty();
                        $('#time').append('<option value="" disabled selected>Select a time</option>');
                        console.log(appointments);
                        if(appointments != ""){
                           
                            
                            appointments.forEach(appointment => {
                                allocatedSlots.push(appointment.time);
                                timeSelect.append(`<option value="${appointment.time}" disabled>${appointment.time} not available</option>`);
                                
                            });

                            const availableSlots = allTimeSlots.filter(element => !allocatedSlots.includes(element));
                
                        
                            availableSlots.forEach(element => {
                                timeSelect.append(`<option value="${element}">${element}</option>`);
                            });
                            
                        }
                        else{
                            allTimeSlots.forEach(element => {
                                timeSelect.append(`<option value="${element}">${element}</option>`);
                            });
                        }
                        
                        
                    }

                });
            });


           
        </script>
    </body>
</html>
